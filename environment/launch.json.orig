{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Custom Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/python",
            "args": [
                "${input:PythonFile}"
            ],
            "stopAtEntry": false,
            "cwd": "${input:WorkingPath}",
            "environment": [
                {
                    "name": "OMP_NUM_THREADS",
                    "value": "1"
                },
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/bin/${command:cpptools.activeConfigName}/libs",
                },
                {
                    "name": "PYTHONPATH",
                    "value": "${workspaceFolder}/bin/${command:cpptools.activeConfigName}"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ],
    "inputs": [
        {
            "id": "WorkingPath",
            "type": "command",
            "command": "memento.promptString",
            "args": {
                "id": "WorkingPath",
                "description": "Working path to be used in debugging",
                "default": ""
            }
        },
        {
            "id": "PythonFile",
            "type": "command",
            "command": "memento.promptString",
            "args": {
                "id": "PythonFile",
                "description": "Python file to be executed in the working path for debugging.",
                "default": ""
            }
        }
    ]
}